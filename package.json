{
  "name": "qrup",
  "version": "0.1.2",
  "type": "module",
  "description": "QRUp - Simple file upload page for local network",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && vite build",
    "build:server": "tsc",
    "build:client": "vite build",
    "changelog": "changelogen",
    "release:notes": "changelogen --release",
    "release:prepare": "bun run build && bun run changelog",
    "release": "bun run build && bun run release:notes",
    "start": "bun run build && bun dist/server.js",
    "dev": "vite build && bun --bun src/server.ts",
    "dev:watch": "concurrently \"vite build --watch\" \"bun --bun src/server.ts\"",
    "lint": "biome check src client",
    "lint:fix": "biome check --write --unsafe src client",
    "format": "biome format --write src client",
    "test:e2e": "playwright test --reporter=line",
    "test:e2e:ui": "playwright test --ui",
    "test:ci": "playwright test"
  },
  "keywords": [
    "upload",
    "file-transfer",
    "local-network",
    "qr-code"
  ],
  "author": "Tobias Trusch",
  "repository": {
    "type": "git",
    "url": "https://github.com/totherush/qrup.git"
  },
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "multer": "^1.4.5-lts.1",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@playwright/test": "^1.56.1",
    "@types/archiver": "^7.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "changelogen": "^0.6.2",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.32",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
